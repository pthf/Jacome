.equipos-section
  width: 100%;
  height: auto;
  position: relative;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: center;
  align-items: center;

.equipos-wrapper
  width: 100%;
  height: auto;
  position: relative;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: center;
  align-items: center;

.equipo-item
  width: 33.3%;
  height: 40vw;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
  cursor: pointer;

.equipo-item img
  width: auto;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  transition: .9s
  display: block;

.equipos-modal
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%
  background-color: rgba(48,44,44,.9)
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  transition: 1s
  z-index: 4
  opacity: 1
  overflow: auto;

.show-modal
  left 0
  opacity: 1

.hide-modal
  left 100%
  opacity: 0

p.description-modal,.description-item
  text-align: justify;

div.equipo-title
  width 80%
  z-index: 2
  color #fff
  font-size: 20px
  font-weight: 100;

.info-modal
  width: 40%
  color: #fff

.img-modal
  width: 33%
  text-align: center;

.img-modal img
  height: 250px;
  width: 250px;

.close-modal
  position: absolute;
  top: 3%;
  right: 3%;
  color: #fff
  cursor: pointer;

.close-icon-modal
  font-size: 32px;
  font-weight: 100;
  font-family: sans-serif;

@media(max-width 1280px)
  .info-modal
    width 66%

@media(min-width 1001px)
  .equipo-item:hover.equipo-item img
    transform: scale(1.1);

  span.ver-mas,.ver-mas-wrapper
    display: none

@media(max-width 1000px)
  div.equipo-title
    font-size: 18px

  .close-modal
    top: 0%;
    right: 2%;

  .equipos-wrapper
    flex-direction: column;

  .equipo-item
    height: 50vw

  .equipo-item,.equipo-item img
    width 100%

  .ver-mas-wrapper
    position: absolute;
    width: 100%;
    left: 0;
    top: 80%;

  span.ver-mas
    color: #fff;
    border: 1px solid #fff;
    padding: 1vw;
    font-weight: 100;
    font-size: 16px;

  .equipos-modal
    flex-direction: column;
    justify-content: flex-start;

  .info-modal
    height: 110vw
    width 90%

  .img-modal img
    height 100%
    width 100%

  p.description-modal
    padding-bottom: 50px

@media(max-width 768px)
  div.equipo-title
    font-size: 16px

  .equipo-item
    height: 55vw
@media(max-width 480px)
  .equipo-item
    height: 65vw
